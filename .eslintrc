{
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "vue",
    "jest"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": 0,
    "radix": 0,
    "indent": ["error", 4],
    "vue/html-indent": ["error", 4],
    "max-len": [2, {"code": 300, "tabWidth": 4, "ignoreUrls": true, "ignoreComments": true}]
  }
}
